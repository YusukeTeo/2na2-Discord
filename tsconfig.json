{
  "compilerOptions": {
    "incremental": false,
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": false,
    "rootDir": "src",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "baseUrl": ".",
    "outDir": "./built",
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noLib": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"paths": {
			"@/*": ["src/*"],
			"@config/": ["./.config/*"],
		},
  },
  "include": [
    "./src/**/*.ts"
  ]
}
